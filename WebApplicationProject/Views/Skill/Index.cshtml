@using WebApplicationProject.Models
@model WebApplicationProject.Models.MyModelWrapper
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <meta name="copyright" content="MACode ID, https://www.macodeid.com/">

    <title>Portfolio | Yaser Beker</title>

    <link rel="shortcut icon" href="~/portfolio/assets/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/css/themify-icons.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/css/bootstrap.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/vendor/animate/animate.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/vendor/owl-carousel/owl.carousel.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/vendor/perfect-scrollbar/css/perfect-scrollbar.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/vendor/nice-select/css/nice-select.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/vendor/fancybox/css/jquery.fancybox.min.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/css/virtual.css">

    <link rel="stylesheet" type="text/css" href="~/portfolio/assets/css/topbar.virtual.css">
</head>
<body class="theme-red">

    <!-- Back to top button -->
    <div class="btn-back_to_top">
        <span class="ti-arrow-up"></span>
    </div>

    <div class="vg-page page-home" id="home" style="background-image: url(../../portfolio/assets/img/bg_image_1.jpg)">
        <!-- Navbar -->
        <div class="navbar navbar-expand-lg navbar-dark sticky" data-offset="500">
            <div class="container">
                <a href="" class="navbar-brand">Portfolio</a>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#main-navbar" aria-expanded="true">
                    <span class="ti-menu"></span>
                </button>
                <div class="collapse navbar-collapse" id="main-navbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a href="#home" class="nav-link" data-animate="scrolling">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#about" class="nav-link" data-animate="scrolling">About</a>
                        </li>

                    </ul>
                    <ul class="nav ml-auto">
                        <li class="nav-item">
                            <button class="btn btn-fab btn-theme no-shadow">En</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div> <!-- End Navbar -->
        <!-- Caption header -->
        <div class="caption-header text-center wow zoomInDown">
            <h5 class="fw-normal">Welcome</h5>
            <h1 class="fw-light mb-4">I'm <b class="fg-theme">Yaser</b> Beker</h1>
            <div class="badge">Android Developer</div>
        </div> <!-- End Caption header -->
        <div class="floating-button"><span class="ti-mouse"></span></div>
    </div>

    <div class="vg-page page-about" id="about">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4 py-3">
                    <div class="img-place wow fadeInUp">
                        <img src="~/portfolio/assets/img/person.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1 wow fadeInRight">
                    <h1 class="fw-light">Yaser Beker</h1>
                    <h5 class="fg-theme mb-3">Android Developer</h5>
                    <p class="text-muted">As a Junior Software Developer, I am deeply passionate about coding and problem-solving. Currently, I specialize in Android development and I am in my third year of university studies.</p>
                    <ul class="theme-list">
                        <li><b>From:</b> Syria</li>
                        <li><b>Lives In:</b> Turkey</li>
                        <li><b>Age:</b> 25</li>
                        <li><b>Gender:</b> Male</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container py-5">
            <h1 class="text-center fw-normal wow fadeIn">My Skills</h1>
            <div class="row py-3">
                <div class="col-md-6">
                    <div class="px-lg-3">
                        <h4 class="wow fadeInUp">Coding skills</h4>

                        @foreach (var item in Model.Skills.Take(4))
                        {
                            <div class="progress-wrapper wow fadeInUp">
                                <span class="caption">@item.SkillName</span>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @item.SkillPercent%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">@item.SkillPercent%</div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="px-lg-3">
                        <h4 class="wow fadeInUp">Design Skills</h4>
                        @foreach (var item in Model.Skills.Skip(4).Take(5))
                        {
                            <div class="progress-wrapper wow fadeInUp">
                                <span class="caption">@item.SkillName</span>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @item.SkillPercent%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">@item.SkillPercent%</div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>



        <div class="vg-page page-funfact" style="background-image: url(../../portfolio/assets/img/bg_banner.jpg);">
            <div class="container">
                <div class="row section-counter">
                    @foreach (var item in Model.Infos)
                    {
                        <div class="col-md-6 col-lg-3 py-4 wow fadeIn">
                            <h1 class="number" data-number="@item.InfoPercent">@item.InfoPercent</h1>
                            <span>@item.InfoName</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="vg-footer">
            <h1 class="text-center">Portfolio</h1>
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 py-3">
                        <div class="footer-info">
                            <p>Where to find me</p>
                            <hr class="divider">
                            <p class="fs-large fg-white">Yağcilar Şehit Prof.Dr.İlhan Varank Yerleşkesi, 45110 Yunusemre/Manisa</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 py-3">
                        <div class="float-lg-right">
                            <p>Follow me</p>
                            <hr class="divider">
                            <ul class="list-unstyled">
                                <li><a href="#">Instagram</a></li>
                                <li><a href="#">Facebook</a></li>
                                <li><a href="#">Twitter</a></li>
                                <li><a href="#">Youtube</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 py-3">
                        <div class="float-lg-right">
                            <p>Contact me</p>
                            <hr class="divider">
                            <ul class="list-unstyled">
                                <li>yasserbakkar97@gmail.com</li>
                                <li>+90 552 497 84 82</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center mt-3">
                    <div class="col-12">
                        <p class="text-center mb-0 mt-4">Copyright &copy;2023. All right reserved | This template is made with <span class="ti-heart fg-theme-red"></span> by <a href="https://github.com/yasserbakkar97">Yaser Beker</a></p>
                    </div>
                </div>
            </div>
        </div> <!-- End footer -->


        <script src="~/portfolio/assets/js/jquery-3.5.1.min.js"></script>

        <script src="~/portfolio/assets/js/bootstrap.bundle.min.js"></script>

        <script src="~/portfolio/assets/vendor/owl-carousel/owl.carousel.min.js"></script>

        <script src="~/portfolio/assets/vendor/perfect-scrollbar/js/perfect-scrollbar.js"></script>

        <script src="~/portfolio/assets/vendor/isotope/isotope.pkgd.min.js"></script>

        <script src="~/portfolio/assets/vendor/nice-select/js/jquery.nice-select.min.js"></script>

        <script src="~/portfolio/assets/vendor/fancybox/js/jquery.fancybox.min.js"></script>

        <script src="~/portfolio/assets/vendor/wow/wow.min.js"></script>

        <script src="~/portfolio/assets/vendor/animateNumber/jquery.animateNumber.min.js"></script>

        <script src="~/portfolio/assets/vendor/waypoints/jquery.waypoints.min.js"></script>

        <script src="~/portfolio/assets/js/google-maps.js"></script>

        <script src="~/portfolio/assets/js/topbar-virtual.js"></script>

        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAIA_zqjFMsJM_sxP9-6Pde5vVCTyJmUHM&callback=initMap"></script>

</body>
</html>